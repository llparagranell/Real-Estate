# Server Configuration
PORT=4000
API_VERSION=/api/v1

# Database
DATABASE_URL=postgres://USERNAME:PASSWORD@HOST:5432/DATABASE_NAME?sslmode=require

# JWT Secrets
ACCESS_TOKEN_SECRET=your-jwt-access-token-secret
REFRESH_TOKEN_SECRET=your-jwt-refresh-token-secret

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=your-resend-email

# AWS S3 Configuration (required for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
S3_PUBLIC_BASE_URL=https://your-custom-domain.com
S3_PRESIGN_EXPIRES=300